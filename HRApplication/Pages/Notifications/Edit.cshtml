@page
@model HRApplication.Pages.Notifications.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Notification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Notification.ID" />
            <div class="form-group">
                <label asp-for="Notification.dateSent" class="control-label"></label>
                <input asp-for="Notification.dateSent" class="form-control" />
                <span asp-validation-for="Notification.dateSent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notification.type" class="control-label"></label>
                <select asp-for="Notification.type" class="form-control"></select>
                <span asp-validation-for="Notification.type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notification.message" class="control-label"></label>
                <input asp-for="Notification.message" class="form-control" />
                <span asp-validation-for="Notification.message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
