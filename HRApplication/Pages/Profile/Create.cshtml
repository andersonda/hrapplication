@page
@model HRApplication.Pages.Profile.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>UserProfile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserProfile.FirstName" class="control-label"></label>
                <input asp-for="UserProfile.FirstName" class="form-control" />
                <span asp-validation-for="UserProfile.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfile.LastName" class="control-label"></label>
                <input asp-for="UserProfile.LastName" class="form-control" />
                <span asp-validation-for="UserProfile.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfile.Phone" class="control-label"></label>
                <input asp-for="UserProfile.Phone" class="form-control" />
                <span asp-validation-for="UserProfile.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfile.Email" class="control-label"></label>
                <input asp-for="UserProfile.Email" class="form-control" />
                <span asp-validation-for="UserProfile.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfile.Address" class="control-label"></label>
                <input asp-for="UserProfile.Address" class="form-control" />
                <span asp-validation-for="UserProfile.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfile.City" class="control-label"></label>
                <input asp-for="UserProfile.City" class="form-control" />
                <span asp-validation-for="UserProfile.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfile.State" class="control-label"></label>
                <input asp-for="UserProfile.State" class="form-control" />
                <span asp-validation-for="UserProfile.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfile.Zip" class="control-label"></label>
                <input asp-for="UserProfile.Zip" class="form-control" />
                <span asp-validation-for="UserProfile.Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
