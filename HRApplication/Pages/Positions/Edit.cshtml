@page
@model HRApplication.Pages.Positions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Position</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Position.ID" />
            <div class="form-group">
                <label asp-for="Position.Location" class="control-label"></label>
                <input asp-for="Position.Location" class="form-control" />
                <span asp-validation-for="Position.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.Title" class="control-label"></label>
                <input asp-for="Position.Title" class="form-control" />
                <span asp-validation-for="Position.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.Description" class="control-label"></label>
                <input asp-for="Position.Description" class="form-control" />
                <span asp-validation-for="Position.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-page="/Positions/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
